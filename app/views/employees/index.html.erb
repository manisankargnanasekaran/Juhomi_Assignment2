<div class="card-header">

<h3>Employees List's 
   <%= link_to 'Add New', new_employee_path, class: "btn btn-success pull-right"%>
</h3>
</div>


<!-- <h1>Employees</h1> -->

<table id="customer_index" class="table display table-hover table-striped display" cellspacing="0" width="90%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.age %></td>
        <%if employee.gender == true %>
         <td>Male</td>
        <%else%>
         <td>Female</td>
        <%end%>
        
        <td><%= employee.designation %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

